{
  "name": "react-starter",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Damian Majsner <d.majsner@gmail.com>",
  "scripts": {
    "build": "NODE_ENV=production webpack -p",
    "build-dev": "NODE_ENV=development webpack",
    "watch": "NODE_ENV=development webpack --watch",
    "clean": "rimraf ./build",
    "lint": "tslint -p ./tsconfig.json -t codeFrame",
    "prettier": "prettier \"./src/**/*.{ts,tsx,scss}\" --write",
    "fix:ts": "yarn lint --fix",
    "fix": "yarn prettier && yarn fix:ts",
    "test": "jest --colors $JEST_OPTS",
    "test:watch": "jest --watchAll --colors"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "i18next": "^19.3.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@types/enzyme": "^3.10.5",
    "@types/jasmine": "^3.5.10",
    "@types/jest": "^25.2.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.5.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.4",
    "jest": "^25.2.7",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^7.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.4",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/test/test-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/ts/index.tsx",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|svg|ico|png|jpg|jpeg)$": "<rootDir>/__mocks__/style-mock.js",
      "@components/(.*)": "<rootDir>/src/ts/components/$1",
      "@i18n/(.*)": "<rootDir>/src/ts/i18n/$1",
      "@modules/(.*)": "<rootDir>/src/ts/modules/$1",
      "@services/(.*)": "<rootDir>/src/ts/services/$1",
      "@slices/(.*)": "<rootDir>/src/ts/slices/$1",
      "@store/(.*)": "<rootDir>/src/ts/store/$1",
      "@utils/(.*)": "<rootDir>/src/ts/utils/$1",
      "@assets/(.*)": "<rootDir>/src/assets/$1",
      "@fakes/(.*)": "<rootDir>/test/fakes/$1"
    }
  }
}
