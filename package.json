{
  "name": "react-starter",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Damian Majsner <d.majsner@gmail.com>",
  "scripts": {
    "build": "NODE_ENV=production webpack -p",
    "build-dev": "NODE_ENV=development webpack",
    "watch": "NODE_ENV=development webpack --watch",
    "clean": "rimraf ./build",
    "lint": "tslint -p ./tsconfig.json -t codeFrame",
    "prettier": "prettier \"./src/**/*.{ts,tsx,scss}\" --write",
    "fix:ts": "yarn lint --fix",
    "fix": "yarn prettier && yarn fix:ts",
    "test": "jest --colors $JEST_OPTS",
    "test:watch": "jest --watchAll --colors"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "i18next": "^15.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.1",
    "@types/jasmine": "^3.3.12",
    "@types/jest": "^24.0.12",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.8",
    "@types/react-router-dom": "^4.3.3",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/test/test-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/ts/index.tsx",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|svg|ico|png|jpg|jpeg)$": "<rootDir>/__mocks__/style-mock.js",
      "@components/(.*)": "<rootDir>/src/ts/components/$1",
      "@i18n/(.*)": "<rootDir>/src/ts/i18n/$1",
      "@modules/(.*)": "<rootDir>/src/ts/modules/$1",
      "@services/(.*)": "<rootDir>/src/ts/services/$1",
      "@slices/(.*)": "<rootDir>/src/ts/slices/$1",
      "@store/(.*)": "<rootDir>/src/ts/store/$1",
      "@utils/(.*)": "<rootDir>/src/ts/utils/$1",
      "@assets/(.*)": "<rootDir>/src/assets/$1",
      "@fakes/(.*)": "<rootDir>/test/fakes/$1"
    }
  }
}
